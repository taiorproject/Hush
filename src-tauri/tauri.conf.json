{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "Hush",
  "version": "0.2.0",
  "identifier": "org.taiorproject.hush",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../build"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "copyright": "AGPL-3.0-or-later",
    "category": "Network",
    "shortDescription": "Private P2P messenger",
    "longDescription": "End-to-end encrypted messenger with AORP anonymous routing"
  },
  "app": {
    "windows": [
      {
        "title": "Hush - Private Messenger",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' ws://localhost:* wss://*; style-src 'self' 'unsafe-inline'"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
